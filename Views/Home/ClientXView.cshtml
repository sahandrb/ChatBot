@model ChatBot.Models.ClientXModel
@{
    ViewData["Title"] = "ClientXView";
}
<h1>ClientXView</h1>



<form asp-controller="Home" asp-action="ClientX" method="post">

    <label asp-for="Id">Add Your Id</label>
    <input asp-for="Id" />
    <label asp-for="Name">Add Your Name</label>
    <input asp-for="Name" />
    <label asp-for="Message">Add Your Message</label>
    <input asp-for="Message" />
    <button type="submit" class="btn btn-primary">Send Message</button>
</form>


